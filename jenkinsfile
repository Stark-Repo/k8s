pipeline {
    agent { 
            label'docker'
          }

    environment {
        DOCKER_REGISTRY = "starkdocker475"
        IMAGE_NAME = "my-app"
    }

    stages {
       stage('Git Checkout') {
            steps {
                git branch: 'main', credentialsId: 'git-token', url: 'https://github.com/Stark-Repo/k8s.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                    sh "sudo docker build ."
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('', 'docker_hub credentials') {
                        dockerImage.push()
                        dockerImage.push('latest')  // Tag it as 'latest'
                    }
                }
            }
        }
   }
}
