pipeline {
    agent { 
            label'docker'
          }

    environment {
        DOCKER_REGISTRY = "starkdocker475"
        IMAGE_NAME = "my-app"
    }

    stages {
       stage('Git Checkout') {
            steps {
                git branch: 'main', credentialsId: 'git-token', url: 'https://github.com/Stark-Repo/k8s.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                    sh "docker build -t $(IMAGE_NAME):v2.0" 
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('', credentialsId: 'docker-token') {
                        dockerImage.push()
                        dockerImage.push('v2.0')  // Tag it as 'latest'
                    }
                }
            }
        }
   }
}
